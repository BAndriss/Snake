<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".asd.SettingsActivity">

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spLanguagePicker"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:entries="@array/controls"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/controlText"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        android:text="@string/control"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/spLanguagePicker"
        app:layout_constraintEnd_toStartOf="@+id/spLanguagePicker"
        app:layout_constraintTop_toTopOf="@+id/spLanguagePicker" />

</androidx.constraintlayout.widget.ConstraintLayout>